<h1>Albums</h1>
<%= link_to 'Create new album', new_album_path %>
<table class="table table-hover ">
  <thead>
    <tr>
      <th>Artist:</th>
      <th> Album Name:</th>
      <th> Year:</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.artist.name %></td>
        <td><%= album.album_name %></td>
        <td><%= album.year %></td>
        <%if current_user.has_role? :admin%>
         <td><%= button_to 'Destroy',album_path(album), method: :delete, confirm: "Are you sure?" %></td>
        <%end%>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
